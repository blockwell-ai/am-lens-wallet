<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">

    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>
        {{#if title}}
            {{title}}
        {{else if securityToken}}
            Reg D Compliant Lens
        {{else}}
            Lens
        {{/if}}
    </title>
    {{> fonts }}
    <link type="text/css" rel="stylesheet" href="/public/dist/bundle.css" media="screen,projection"/>

    <script>
        window.tokenId = '{{tokenId}}';
        window.tokenType = '{{tokenType}}';
        window.tokenName = '{{tokenName}}';
        window.tokenSymbol = '{{tokenSymbol}}';
        window.tokenDecimals = {{tokenDecimals}};
    </script>

    {{#block "head"}}{{/block}}
</head>
<body>
<div class="main-header">
    <div class="header-content">
        <div class="main-logo">
            <a href="/">
                {{> logo }}
            </a>
        </div>
        <h1><a href="/">WALLET</a></h1>
        <div class="header-right">
            {{#if user}}
                <span class="user-email">{{ user.email }}</span>
                <a href="#" class="dropdown-trigger user-dropdown no-autoinit" data-target="user-dropdown">
                    <i class="material-icons">account_circle</i>
                </a>
                <span class="logout">
                    <a href="/auth/logout">Log Out</a>
                </span>
                <ul id="user-dropdown" class="dropdown-content">
                    <li>
                        <div class="user-email-dropdown">{{ user.email }}</div>
                    </li>
                    <li class="divider" tabindex="-1"></li>
                    <li><a href="/auth/logout">Log Out</a></li>
                </ul>
            {{/if}}
        </div>
    </div>
</div>

<div class="main-body">
    <div class="content">
        {{#block "body"}}{{/block}}
    </div>
</div>

{{> flash }}
<script src="/public/dist/app.bundle.js"></script>
<script src="/public/dist/custom.bundle.js"></script>
{{#block "scripts"}}{{/block}}
</body>
</html>
